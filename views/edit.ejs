                <textarea id="disclaimerInput" type="text" name="disclaimerBody" class="editor-input-body" rows="4"><%= disclaimer %></textarea>
            </div>
            <div class="editor-section-heading">
                <h2><%= partTwoName %></h2>
            </div>
            <div class="consent-language">
                <div class="editor-section">
                    <label for="consentPatientInput">Consent Language for Participant</label>
                    <textarea id="consentPatientInput" type="text" name="consentDescription" class="editor-input-body" rows="4"><%= consentPatient %></textarea>
